extends authLayout 

block content
    .position-relative.my-4
        .card.mb-0.shadow-none.rounded-0
            .fw-bolder.fs-7.mb-3 Forgot your password?
            .mb-0 Please enter the email address associated with your account and We will email you a link to reset your password.
        form(method="post" action="/send-reset-email").mt-4
            if message 
                .alert.alert-info #{message} 

            .mb-3
                label.form-label(for='floatingInput') Email
                input.form-control(type='email' name="email" placeholder='Email' autofocus)

            span#time

            button.w-100.btn.btn-primary(type='submit').mt-2.py-8 Continue
            a.w-100.btn.btn-light-primary.text-primary.py-8(href="/login").mt-2 Back to Login

