extends authLayout 

block content 
    .col-sm-8.col-md-6.col-xl-9
        .position-relative.text-center.my-4
            p.mb-0.fs-6.px-3.d-inline-block.bg-white.text-dark.z-index-5.position-relative
                | Reset Password
            span.border-top.w-100.position-absolute.top-50.start-50.translate-middle
        .alert.alert-danger.d-none
        if message 
            .alert.alert-success 
                | #{message}
        form.rd-mailform(method='post' action='/send-reset-email')#form-login
            input.form-input(type='email' name='email' placeholder='Email' autofocus required)#email
                
            .d-flex.align-items-center.justify-content-between.mb-4

            button.btn.btn-dark.btn-lg.w-100.py-8.mb-4.rounded-5(type='submit') Continue
            .d-flex.align-items-center.justify-content-center
                p.fs-4.mb-0.fw-medium Already have an account?  
                a.text-primary.fw-medium.ms-2(href='/') Sign In